{
  // Use IntelliSense to learn about possible attributes.
  // Hover to view descriptions of existing attributes.
  // For more information, visit: https://go.microsoft.com/fwlink/?linkid=830387
  "version": "0.2.0",
  "configurations": [
    {
      "type": "node",
      "request": "attach",
      "name": "Debug inside container",
      "remoteRoot": "/app",
      "localRoot": "${workspaceFolder}",
      "port": 9299,
      "restart": {
        "delay": 1000,
        "maxAttempts": 10
      },
      "address": "0.0.0.0",
      "skipFiles": [
        "<node_internals>/**",
        "${workspaceFolder}/node_modules/**"
      ],
      "showAsyncStacks": false,
      "smartStep": true
    },
    {
      "request": "launch",
      "name": "Debug via start:dev",
      "runtimeArgs": ["run-script", "start:dev"],
      "runtimeExecutable": "npm",
      "skipFiles": [
        "<node_internals>/**",
        "${workspaceFolder}/node_modules/**"
      ],
      "smartStep": true,
      "nodeVersionHint": 24,
      "sourceMaps": true,
      "showAsyncStacks": false,
      "type": "node",
      "console": "integratedTerminal"
    }
  ]
}
