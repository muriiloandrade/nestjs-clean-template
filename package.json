    "@nestjs/schematics": "^11.0.9",
    "@nestjs/testing": "^11.1.7",
    "@swc/cli": "^0.7.8",
    "@swc/core": "^1.13.5",
    "@swc/jest": "^0.2.39",
    "@tsconfig/recommended": "^1.0.10",
    "@types/express": "^5.0.3",
    "@types/jest": "^30.0.0",
