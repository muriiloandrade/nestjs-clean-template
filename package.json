  "scripts": {
    "build": "nest build",
    "start": "nest start",
    "start:dev": "nest start --watch --preserveWatchOutput",
    "start:debug": "nest start --debug --watch",
    "start:prod": "node dist/main",
    "format": "biome format --write --error-on-warnings --no-errors-on-unmatched .",
    "lint": "biome lint --write --error-on-warnings --no-errors-on-unmatched .",
    "code:check": "biome check --write --error-on-warnings --no-errors-on-unmatched .",
    "test": "jest -w=50% --config ./jest-${TEST_TYPE}.config.js",
    "test:watch": "jest -w=50% --watch --config ./jest-${TEST_TYPE}.config.js",
    "test:cov": "jest -w=50% --coverage --config ./jest-${TEST_TYPE}.config.js",
    "test:cov:json": "jest -w=50% --json --coverage --config ./jest-${TEST_TYPE}.config.js",
    "test:debug": "node --inspect-brk -r tsconfig-paths/register -r ts-node/register node_modules/.bin/jest --config ./jest-${TEST_TYPE}.config.js --runInBand ${TEST_PATTERN}"
  },
  "dependencies": {
    "@knaadh/nestjs-drizzle-pg": "^1.2.0",
